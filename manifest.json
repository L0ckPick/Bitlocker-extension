{
  "manifest_version": 3,
  "name": "Cybersecurity Helper",
  "description": "An extension to enhance web security by blocking phishing, enforcing HTTPS, and more.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "notifications",
    "scripting",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
